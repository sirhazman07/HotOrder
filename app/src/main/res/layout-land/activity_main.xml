<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_large"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androidcourse.hotorder.MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/imageButtonCall"
        android:layout_alignStart="@+id/imageButtonCall"
        android:text="Welcome"
        android:textColor="#fdfdfd"
        android:textColorHighlight="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:text="Order Your Chillies Online and see what new products are available for purchase"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/imageButtonProducts"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:focusable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageButtonOrder"
        android:scaleType="centerInside"
        android:src="@drawable/imagebutton_effect" />
        <!--imagebutton src imagebutton_effect is a custom button layout = gets 1 of 3 drawables for each effect
        such as normal , selected and pressed-->

    <ImageButton
        android:id="@+id/imageButtonOrder"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/textViewProducts"
        android:layout_toRightOf="@+id/textViewProducts"
        android:scaleType="centerInside"
        android:src="@drawable/order_icon_large" />

    <ImageButton
        android:id="@+id/imageButtonCall"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButtonProducts"
        android:scaleType="centerInside"
        android:src="@drawable/people" />

    <ImageButton
        android:id="@+id/imageButtonInfo"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_alignBottom="@+id/imageButtonCall"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:scaleType="centerInside"
        android:src="@drawable/info_icon_large" />

    <TextView
        android:id="@+id/textViewProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButtonProducts"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/imageButtonProducts"
        android:layout_toEndOf="@+id/imageButtonProducts"
        android:gravity="center_horizontal"
        android:text="See what's Available"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textViewOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewProducts"
        android:layout_toEndOf="@+id/imageButtonOrder"
        android:layout_toRightOf="@+id/imageButtonOrder"
        android:gravity="center_horizontal"
        android:text="Make an Order"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/imageButtonCall"
        android:layout_toRightOf="@+id/imageButtonCall"
        android:gravity="center_horizontal"
        android:text="Contact us Directly"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonOrder"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/imageButtonOrder"
        android:layout_toRightOf="@+id/imageButtonOrder"
        android:gravity="center_horizontal"
        android:text="Learn about our Products"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an Item"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
